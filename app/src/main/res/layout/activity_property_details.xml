<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".property_details"
    android:background="@drawable/back4"
    android:padding="20sp"
    >

  <androidx.cardview.widget.CardView
      android:id="@+id/cardnoview"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="25sp"
      android:layout_marginEnd="5sp"
      app:cardCornerRadius="20sp"
      android:clickable="true"
      >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_corners">

      <TextView
          android:id="@+id/detnoofbedH"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="25sp"
          android:layout_marginTop="10sp"
          android:text="@string/noofbedroom"
          android:textStyle="italic" />


      <TextView
          android:id="@+id/detnoofbed"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="10sp"
          android:layout_marginTop="10sp"
          android:layout_toRightOf="@id/detnoofbedH" />

      <TextView
          android:id="@+id/detnoofhallH"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@id/detdividervertical"
          android:layout_marginStart="25sp"
          android:layout_marginTop="10sp"
          android:text="@string/noofhall"
          android:textStyle="italic" />
      <TextView
          android:id="@+id/detnoofhall"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@id/detnoofhallH"
          android:layout_marginStart="10sp"
          android:layout_marginTop="10sp"

          />

      <TextView
          android:id="@+id/detnoofkitH"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/detnoofbedH"
          android:layout_marginStart="25sp"
          android:layout_marginTop="5sp"
          android:layout_marginBottom="10sp"
          android:text="@string/noofkitchen"
          android:textStyle="italic"
          />


      <TextView
          android:id="@+id/detnoofkit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@id/detnoofkitH"
          android:layout_marginStart="10sp"
          android:layout_marginTop="5sp"
          android:layout_below="@+id/detnoofbed"
          />

      <View
          android:id="@+id/detdividervertical"
          android:layout_width="1dp"
          android:layout_height="50sp"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:layout_above="@+id/detdividerhorizontal"
          android:background="?android:attr/listDivider"
          />

      <View
          android:id="@+id/detdividerhorizontal"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_below="@id/detnoofkitH"
          android:background="?android:attr/listDivider" />

    </RelativeLayout>
  </androidx.cardview.widget.CardView>

  <TextView
      android:id="@+id/detdescHview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/cardnoview"
      android:layout_marginStart="10sp"
      android:layout_marginTop="20sp"
      android:text="@string/description"
      android:textStyle="bold"
      android:textSize="20sp"
      />

  <androidx.cardview.widget.CardView
      android:id="@+id/detdesccardview"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="10sp"
      android:layout_marginEnd="5sp"
      app:cardCornerRadius="20sp"
      android:layout_below="@id/detdescHview"
      >
    <TextView
        android:id="@+id/detdescview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:padding="10sp"
        android:background="@drawable/round_corners"
        />
  </androidx.cardview.widget.CardView>

  <TextView
      android:id="@+id/detadrsHview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="20sp"
      android:layout_below="@id/detdesccardview"
      android:layout_marginTop="20sp"
      android:layout_marginStart="10sp"
      android:text="@string/adrs"
      android:textStyle="bold"
      />

  <androidx.cardview.widget.CardView
      android:id="@+id/detadrscardview"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="10sp"
      android:layout_marginEnd="5sp"
      app:cardCornerRadius="20sp"
      android:layout_below="@id/detadrsHview"
      >
    <TextView
        android:id="@+id/detadrsview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:padding="10sp"
        android:background="@drawable/round_corners"
        />
  </androidx.cardview.widget.CardView>

  <TextView
      android:id="@+id/detcntHview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/detadrscardview"
      android:layout_marginTop="20sp"
      android:layout_marginStart="10sp"
      android:textSize="20sp"
      android:textStyle="bold"
      android:text="@string/contact_details"
      />
  <androidx.cardview.widget.CardView
      android:id="@+id/detcntcardview"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="10sp"
      android:layout_marginEnd="5sp"
      app:cardCornerRadius="20sp"
      android:layout_below="@id/detcntHview">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_corners">

      <TextView
          android:id="@+id/detnameviewH"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20sp"
          android:layout_marginStart="10sp"
          android:text="@string/ownername"
          android:textStyle="italic"/>

      <TextView
          android:id="@+id/detnameview"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@+id/detnameviewH"
          android:layout_marginTop="20sp"
          android:layout_marginStart="10sp"
          />

      <TextView
          android:id="@+id/detemailviewH"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/email_txt"
          android:textStyle="italic"
          android:layout_below="@id/detnameviewH"
          android:layout_marginStart="10sp"
          android:layout_marginTop="10sp"/>

      <TextView
          android:id="@+id/detemailview"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/detnameview"
          android:layout_toRightOf="@+id/detemailviewH"
          android:layout_marginTop="10sp"
          android:layout_marginStart="10sp"
          />
      <TextView
          android:id="@+id/detphoneviewH"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/phoneno._txt"
          android:textStyle="italic"
          android:layout_below="@id/detemailviewH"
          android:layout_marginStart="10sp"
          android:layout_marginTop="10sp"
          android:layout_marginBottom="20sp"/>

      <TextView
          android:id="@+id/detphoneview"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/detemailview"
          android:layout_toRightOf="@+id/detphoneviewH"
          android:layout_marginTop="10sp"
          android:layout_marginStart="10sp"
          android:layout_marginBottom="20sp"
          />

    </RelativeLayout>

  </androidx.cardview.widget.CardView>


</RelativeLayout>