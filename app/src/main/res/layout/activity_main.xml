<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/back3"
    >

    <EditText
        android:id="@+id/emailview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/passwordview"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/email_selector"
        android:ems="10"
        android:hint="@string/userid_txt"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/passwordview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/lock_selectore"
        android:ems="10"
        android:hint="@string/password_txt"
        android:inputType="textPassword"
        android:padding="10sp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/signinbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordview"
        android:layout_centerInParent="true"
        android:layout_marginTop="65dp"
        android:text="@string/signin_txt" />

    <TextView
        android:id="@+id/forgetbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signinbtn"
        android:layout_centerHorizontal="true"
        android:text="@string/foregetpass_txt"
        android:layout_marginTop="10sp"/>

    <TextView
        android:id="@+id/signupview"
        android:text="@string/newuser_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25sp"
        />

    <CheckBox
        android:id="@+id/passwordcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordview"
        android:layout_marginTop="10dp"
        android:layout_marginRight="2dp"
        android:layout_centerHorizontal="true"
        android:text="@string/showpassword"
        />
    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:padding="50sp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="@drawable/round_corners"/>


</RelativeLayout>