<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_property">

    <TextView
        android:id="@+id/addp_descH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="60sp"
        android:text="@string/description"
        android:textSize="30sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/addp_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addp_descH"
        android:layout_marginStart="25sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="25sp"
        app:cardCornerRadius="20sp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="200"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/addp_addressH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addp_desc"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30sp"
        android:text="@string/adrs"
        android:textSize="30sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/addp_addresscard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addp_addressH"
        android:layout_marginStart="25sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="25sp"
        app:cardCornerRadius="20sp">

        <EditText
            android:id="@+id/addp_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="200"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/addp_cntcH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addp_addresscard"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30sp"
        android:text="@string/contact_details"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/addp_emlH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emailprf"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_below="@+id/addp_cntcH"
        android:layout_marginStart="40sp"
        android:layout_marginTop="10sp"
        />


    <TextView
        android:id="@+id/addp_phnH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phoneprf"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_below="@+id/addp_emlH"
        android:layout_marginTop="10sp"
        android:layout_marginStart="40sp"
        />



    <Button
        android:id="@+id/addp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="91dp"
        android:text="@string/add_prop"
        />

</RelativeLayout>